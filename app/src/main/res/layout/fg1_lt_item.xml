<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/y4"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y11"
                    android:text="名称："/>
                <TextView
                    android:id="@+id/fg1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y11"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y11"
                    android:layout_gravity="left"

                    android:text="分类："/>
                <TextView
                    android:id="@+id/fg1_fenlei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y11"
                    android:text="酒水"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y11"
                    android:layout_gravity="left"

                    android:text="品牌："/>
                <TextView
                    android:id="@+id/fg1_pinpai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y11"
                    android:text=""/>
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:layout_gravity="left"
                android:text="规格："/>
            <TextView
                android:id="@+id/fg1_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:layout_gravity="left"

                android:text="库存量："/>
            <TextView
                android:id="@+id/fg1_kucun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:layout_gravity="left"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/y6"
         android:orientation="horizontal">
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:layout_gravity="left"

                android:text="助记码："/>
            <TextView
                android:id="@+id/fg1_zhujima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:layout_gravity="left"
                android:text=""/>

     </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y11"
            android:layout_gravity="left"

            android:text="条形码："/>
            <TextView
                android:id="@+id/fg1_tiaoxingma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:layout_gravity="left"
                android:text=""/>

    </LinearLayout>
     </LinearLayout>
        <LinearLayout
            android:id="@+id/fg1_ll_beizhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pd_beizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:layout_gravity="center_vertical"
                android:text="备注："/>

            <TextView
                android:id="@+id/fg1_beizhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y11"
                android:text=""/>


        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_xiugai"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30">
            <Button
                android:id="@+id/pd_xiugia"
                android:layout_width="@dimen/x100"
                android:layout_height="match_parent"
                android:text="修改"
                android:background="@mipmap/xuigai"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:focusable="false"
                android:textSize="@dimen/y11"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_wancheng"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:visibility="gone">
            <Button
                android:id="@+id/pd_wancheng"
                android:layout_width="@dimen/x100"
                android:layout_height="match_parent"
                android:text="提交"
                android:background="@mipmap/xuigai"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:focusable="false"
                android:textSize="@dimen/y11"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>