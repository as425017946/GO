<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="go.app.mdb.android.go.lixian.LixinaMainActivity"
    android:orientation="vertical">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/lixina_fenye_title"></include>

    <LinearLayout
        android:id="@+id/lixian_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/whitesmoke"></LinearLayout>
    <!--3. 底部的四个选项菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y42"
        android:background="@color/dibu_bg">
        <!--四个部分都一样：ImageView + TextView-->
        <LinearLayout
            android:id="@+id/lx_first_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/lx_first_image"
                    android:layout_marginTop="@dimen/y2"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/y21"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/chuangjian2" />
                <TextView
                    android:id="@+id/lx_first_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/y2"
                    android:text="创建 "
                    android:textColor="#7597B3" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lx_second_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/lx_second_image"
                    android:layout_marginTop="@dimen/y2"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/y21"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/dingdan1" />
                <TextView
                    android:id="@+id/lx_second_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/y2"
                    android:text="我的"
                    android:textColor="#7597B3" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
