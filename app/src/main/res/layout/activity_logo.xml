<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="go.app.mdb.android.go.LogoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:layout_gravity="center_horizontal"
            android:background="@color/dibu_bg"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/fenye_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y40"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y16"
                    android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginRight="@dimen/y20"
                android:layout_marginBottom="@dimen/y10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="账号："
                    android:textSize="@dimen/y12"
                    android:gravity="center_vertical"/>
                <Spinner android:id="@+id/sp1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Spinner>
            </LinearLayout>
        </LinearLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#efeff4"
         />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginLeft="@dimen/y20"
                android:layout_marginRight="@dimen/y20"
                android:layout_marginBottom="@dimen/y10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="密码："
                    android:textSize="@dimen/y12"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/et_inputpwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:text="000000"
                    android:hint="请输入密码"/>
            </LinearLayout>
        </LinearLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#efeff4"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:background="@color/white"
            android:layout_margin="@dimen/y20">
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="@dimen/x150"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@mipmap/xuigai"
                android:textColor="@color/white"
                android:text="登录"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
