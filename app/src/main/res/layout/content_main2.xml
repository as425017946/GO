<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="go.app.mdb.android.go.MainActivity"
    tools:showIn="@layout/app_bar_main">

        <!--2. 存放四个Fragment-->
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/whitesmoke"></LinearLayout>
        <!--3. 底部的四个选项菜单-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y42"
            android:background="@color/dibu_bg">
            <!--3个部分都一样：ImageView + TextView-->
            <LinearLayout
                android:id="@+id/second_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/second_image"
                        android:layout_marginTop="@dimen/y2"
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/y21"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/dingdan1" />
                    <TextView
                        android:id="@+id/second_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y2"
                        android:text="订单"
                        android:textColor="#7597B3" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/third_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/third_image"
                        android:layout_marginTop="@dimen/y2"
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/y21"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/kucun1" />
                    <TextView
                        android:id="@+id/third_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y2"
                        android:text="库存"
                        android:textColor="#7597B3" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fourth_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/fourth_image"
                        android:layout_marginTop="@dimen/y2"
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/y21"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/wode1" />
                    <TextView
                        android:id="@+id/fourth_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y2"
                        android:text="我的"
                        android:textColor="#7597B3" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



</LinearLayout>
